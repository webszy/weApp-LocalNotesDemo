/* pages/addNote.wxss */
.wrap{
  display: flex;
  flex-direction: column;
  overflow-y: scroll;
  width: 100%;
  min-height:100vh; 
}
.title{
  height: 80rpx;
  border-bottom: 1px dotted salmon;
  color: #515a6e;
}
.tit{
  font-size: 30rpx;
  text-indent: 20rpx;
  color: #515a6e;
}
.content{
  width:100%;
  flex: 1;
  overflow-y: auto;
  color: #515a6e;
}
.txt{
  font-size: 36rpx;
  color: #515a6e;
}
.save{
  height:110rpx;
  display: flex;
  justify-content: space-between;
  align-items:flex-end;
  margin-bottom: 24rpx;
 background-color:  #f4f4f4;
}
.save button{
  width: 45vw;
  height: 70%;
  background-color: #19be6b;
  color: #fff;
  line-height: 220%;
  text-align:center;
  border-radius: 20rpx;
}
.save button:last-child{
  background-color: #ed4014;
}